<odoo>
  <record id="view_repayment_form_modal_readonly_bridge" model="ir.ui.view">
    <field name="name">loan.manager.repayment.form.modal.readonly.bridge</field>
    <field name="model">loan.manager.repayment</field>
    <field name="arch" type="xml">
      <form string="Cuotas Generadas" create="false" edit="false" delete="false">
        <sheet>
          <group col="2">
            <group>
              <field name="reference" readonly="1"/>
              <field name="sequence" string="Número de Cuota" readonly="1"/>
              <field name="payment_date" string="Fecha de Contabilización" readonly="1"/>
              <field name="interest" string="Interés" readonly="1"/>
              <field name="amount_paid" string="Monto Pagado" readonly="1"/>
              <field name="loan_status" string="Loan Status" readonly="1"/>
              <field name="move_id" readonly="1"
                     context="{'form_view_ref': 'account.view_move_form'}"/>
              <field name="withdrawal_id" readonly="1"
                     context="{'form_view_ref': 'tel_capp_csm.view_withdrawal_form'}"/>
            </group>
            <group>
              <field name="loan_id" string="Préstamo" readonly="1"/>
              <field name="due_date" string="Fecha de Pago" readonly="1"/>
              <field name="principal" string="Capital" readonly="1"/>
              <field name="total_payment" string="Pago Total" readonly="1"/>
              <field name="remaining_balance" string="Saldo Restante" readonly="1"/>
              <field name="status" readonly="1"/>
              <field name="internal_payment" string="Pago Interno" readonly="1"/>
            </group>
          </group>
        </sheet>
        <footer>
          <button string="Cerrar" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>